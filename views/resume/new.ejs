<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Создать резюме</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Главная</a></li>
                    <li class="breadcrumb-item"><a href="/resume">Мои резюме</a></li>
                    <li class="breadcrumb-item active">Создать резюме</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <form class="custom-validation" action="/resume/new" method="post">
                    <div class="mb-3">
                        <label for="title" class="form-label"><sup class="text-danger">*</sup> Название резюме <small>(видно только вам)</small></label>
                        <input id="title" name="title" type="text" class="form-control" placeholder="Резюме маркетолога и тд." required/>
                    </div>

                    <div class="mb-3">
                        <label for="name" class="form-label"><sup class="text-danger">*</sup> Ваше имя</label>
                        <input type="text" id="name" name="name" class="form-control" placeholder="Абдувохид Ахмедов и тд." required/>
                    </div>

                    <div class="mb-3">
                        <label for="living_city" class="form-label">Город проживания</label>
                        <input type="text" id="living_city" name="living_city" class="form-control" placeholder="Ташкент, Узбекистан и тд."/>
                    </div>

                    <div class="mb-3">
                        <label for="gender" class="form-label">Ваш пол</label>
                        <select name="gender" id="gender" class="form-select">
                            <option value="hidden">Не указан</option>
                            <option value="male">Мужчина</option>
                            <option value="female">Женщина</option>
                        </select>
                    </div>

                    <div class="mb-3">
                        <label for="job_position" class="form-label">Ваша позиция</label>
                        <input type="text" id="job_position" name="job_position" class="form-control" placeholder="Главный маркетолог-финансист и тд."/>
                    </div>

                    <div class="mb-3">
                        <label for="about" class="form-label">О вас</label>
                        <textarea id="about" name="about" class="form-control" placeholder="Я студент университета и тд."></textarea>
                    </div>

                    <div>
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light me-1">
                                Создать
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
    </div>

    <div class="col-md-4">
        <%- include('../components/support_block') %>
    </div>
</div>
