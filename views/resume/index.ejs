<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Мои резюме</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Главная</a></li>
                    <li class="breadcrumb-item active">Мои резюме</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Публичные резюме</h5>
                <% if (resumes.public.length > 0) { %>
                    <div class="table-rep-plugin">
                        <div class="table-responsive mb-0" data-pattern="priority-columns">
                            <table class="table">
                                <tbody>
                                <% for (const resume of resumes.public) { %>
                                    <tr>
                                        <th><%= resume.title %></th>
                                        <td><%= resume.name %></td>
                                        <td>
                                            <a href="/" class="btn btn-success">Поделиться</a>
                                            <a href="/" class="btn btn-warning">Редактировать</a>
                                        </td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% } else { %>
                    <p class="text-muted mb-0">Нет публичных резюме</p>
                <% } %>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Приватные резюме</h5>
                <% if (resumes.private.length > 0) { %>
                    <div class="table-rep-plugin">
                        <div class="table-responsive mb-0" data-pattern="priority-columns">
                            <table class="table">
                                <tbody>
                                <% for (const resume of resumes.private) { %>
                                    <tr>
                                        <th><%= resume.title %></th>
                                        <td><%= resume.name %></td>
                                        <td>
                                            <a href="/" class="btn btn-success">Поделиться</a>
                                            <a href="/" class="btn btn-warning">Редактировать</a>
                                        </td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% } else { %>
                    <div class="d-block"><p class="text-muted mb-0">Нет приватных резюме</p></div>
                <% } %>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <h5 class="card-title">Резюме в черновиках</h5>
                <% if (resumes.public.length > 0) { %>
                    <div class="table-rep-plugin">
                        <div class="table-responsive mb-0" data-pattern="priority-columns">
                            <table class="table">
                                <tbody>
                                <% for (const resume of resumes.draft) { %>
                                    <tr>
                                        <th><%= resume.title %></th>
                                        <td><%= resume.name %></td>
                                        <td>
                                            <a href="/" class="btn btn-success">Поделиться</a>
                                            <a href="/" class="btn btn-warning">Редактировать</a>
                                        </td>
                                    </tr>
                                <% } %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                <% } else { %>
                    <div class="d-block"><p class="text-muted mb-0">Нет резюме в черновиках</p></div>
                <% } %>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <a href="/resume/new" class="btn btn-success waves-effect">Создать резюме</a>
        </div>
        <%- include('../components/support_block') %>
    </div>
</div>
