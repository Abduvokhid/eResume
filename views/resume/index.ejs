<div class="row no-cursor">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Мои резюме</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Главная</a></li>
                    <li class="breadcrumb-item active">Мои резюме</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row no-cursor">
    <div class="col-md-8">
        <div class="card">
            <div class="card-body">
                <h5 class="card-title mb-3">Список всех ваших резюме</h5>
                <div class="list-group">
                    <% if (user_resumes.length > 0) { %>
                        <% for (const resume of user_resumes) { %>
                            <a href="/resume/<%= resume._id %>" class="list-group-item list-group-item-action d-flex justify-content-between align-middle">
                                <span class="align-self-center"><%= resume.title %></span>
                                <div>
                                    <% if (resume.status === 'public') { %>
                                        <span class="badge badge-soft-success align-middle">Публичное</span>
                                    <% } %>
                                    <% if (resume.status === 'private') { %>
                                        <span class="badge badge-soft-dark align-middle">Приватное</span>
                                    <% } %>
                                    <% if (resume.status === 'draft') { %>
                                        <span class="badge badge-soft-warning align-middle">Черновик</span>
                                    <% } %>
                                </div>
                            </a>
                        <% } %>
                    <% } else { %>
                        <h6 class="font-14 text-muted mb-0">Нет данных</h6>
                    <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="col-md-4">
        <div class="card">
            <a href="/resume/new" class="btn btn-success waves-effect">Создать резюме</a>
        </div>
        <%- include('../components/support_block') %>
    </div>
</div>
