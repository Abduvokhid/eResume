<header id="page-topbar">
    <div class="navbar-header">
        <div class="d-flex">
            <!-- LOGO -->
            <div class="navbar-brand-box text-center">
                <a href="/" class="logo logo-dark">
                    <span class="logo-sm">
                        <img src="/assets/images/favicon.png" alt="logo-sm-dark" height="22">
                    </span>
                    <span class="logo-lg">
                        <img src="/assets/images/logo-dark.svg" alt="logo-dark" height="24">
                    </span>
                </a>

                <a href="/" class="logo logo-light">
                                <span class="logo-sm">
