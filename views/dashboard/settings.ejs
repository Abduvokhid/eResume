<div class="row">
    <div class="col-12">
        <div class="page-title-box d-sm-flex align-items-center justify-content-between">
            <h4 class="mb-sm-0">Настройки</h4>

            <div class="page-title-right">
                <ol class="breadcrumb m-0">
                    <li class="breadcrumb-item"><a href="/">Главная</a></li>
                    <li class="breadcrumb-item active">Настройки</li>
                </ol>
            </div>

        </div>
    </div>
</div>

<div class="row">
    <div class="col-md-8">
        <% if (account.method === 'password') { %>
        <div class="card">
            <div class="card-body">
                <h4 class="card-title"><strong>Смена пароля</strong></h4>
                <p class="card-title-desc"><strong>Внимание!</strong> После смены пароля вам надо будет заново авторизоваться.</p>

                <form class="custom-validation" action="/settings/password" method="post">
                    <div class="mb-3">
                        <label for="old_password" class="form-label">Старый пароль</label>
                        <input type="password" id="old_password" name="old_password" class="form-control" required placeholder="Введите старый пароль"/>
                        <% if (typeof flash.incorrect_password !== 'undefined') { %>
                            <div class="text-danger small mt-1">
                                <%= flash.incorrect_password %>
                            </div>
                        <% } %>
                    </div>

                    <div class="mb-3">
                        <label for="new_password" class="form-label">Новый пароль</label>
                        <div>
                            <input type="password" id="new_password" name="new_password" class="form-control" required placeholder="Введите новый пароль"/>
                        </div>
                        <div class="mt-2">
                            <input type="password" id="new_password_confirm" name="new_password_confirm" class="form-control" required placeholder="Повторите новый пароль"/>
                        </div>
                        <% if (typeof flash.passwords_mismatch !== 'undefined') { %>
                            <div class="text-danger small mt-1">
                                <%= flash.passwords_mismatch %>
                            </div>
                        <% } %>
                    </div>

                    <div>
                        <div>
                            <button type="submit" class="btn btn-primary waves-effect waves-light me-1">
                                Сохранить
                            </button>
                        </div>
                    </div>
                </form>

            </div>
        </div>
        <% } %>
    </div>

    <div class="col-md-4">
        <%- include('../components/support_block') %>
    </div>
</div>
